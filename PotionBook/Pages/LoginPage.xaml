<Page x:Class="PotionBook.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PotionBook.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="400"
      Title="Авторизация">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"> 
            <StackPanel Orientation="Horizontal">
                <TextBlock Style="{StaticResource BlockCommon}" Text="Логин:"></TextBlock>
                <TextBox Name="TxtLogin"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Style="{StaticResource BlockCommon}" Text="Пароль:"></TextBlock>
                <PasswordBox Name="TxtPassword"></PasswordBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Name="LoginBtn" Click="LoginBtn_Click" Content="Войти"/>
                <Button Name="RegisterBtn" Click="RegisterBtn_Click" Content="Зарегистрироваться"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
