<Page x:Class="PotionBook.Pages.NavigatePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PotionBook.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="160" d:DesignWidth="200"
      Title="Навигация">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Лекции" x:Name="LessonBtn" Click="LessonBtn_Click"/>
            <Button Content="Тесты" x:Name="TestBtn" Click="TestBtn_Click"/>
            <Button Content="Далее" x:Name="NextBtn" Click="NextBtn_Click"/>
            <Button Content="Выйти" x:Name="LogOutBtn" Click="LogOutBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
